<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Login</title>
	{{> include}}
</head>
<body>
	{{> header}}
	<section class="fullpage-form-container">
		<form id="login_form" class="fullpage-form">
			<div id="error_msg" class="hidden">Error message here</div>
			<label for="login">Username:</label>
			<input type="text" name="login" id="login_text" placeholder="Username">
			<label for="passw">Password:</label>
			<input type="password" name="passw" id="passw_text">
			<div class="form-footer">	
				<input type="submit" value="Log In">
			</div>
		</form>
	</section>
	{{> footer}}
</body>
</html>